[Unit]
Description=Podman  hope-app.service
BindsTo=hope.service
After=hope.service mariadb-app.service

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
EnvironmentFile=%S/state/environment
EnvironmentFile=-%S/state/smarthost.env
WorkingDirectory=%S/state
Restart=always
TimeoutStopSec=70
ExecStartPre=/bin/mkdir -p tmp
ExecStartPre=/bin/rm -f %t/hope-app.pid %t/hope-app.ctr-id
ExecStartPre=-runagent discover-smarthost
ExecStart=/usr/bin/podman run --conmon-pidfile %t/hope-app.pid \
    --cidfile %t/hope-app.ctr-id --cgroups=no-conmon \
    --pod-id-file %t/hope.pod-id --replace -d --name  hope-app \
    --volume hope-app:/var/www/html/:Z \
    --volume ./tmp:/tmp:Z \
    --env=MARIADB_* \
    --env MARIADB_DB_TYPE=mysql \
    --env MARIADB_DB_HOST=127.0.0.1 \
    --env MARIADB_DB_PORT=3306 \
    --env MARIADB_DB_USER=hope \
    --env MARIADB_DB_PASSWORD=hope \
    --env MARIADB_DB_NAME=hope \
    ${NGINX_IMAGE}
ExecStop=/usr/bin/podman stop --ignore --cidfile %t/hope-app.ctr-id -t 10
ExecReload=/usr/bin/podman kill -s HUP hope-app
SyslogIdentifier=%u
ExecStopPost=/usr/bin/podman rm --ignore -f --cidfile %t/hope-app.ctr-id
PIDFile=%t/hope-app.pid
Type=forking

[Install]
WantedBy=default.target
